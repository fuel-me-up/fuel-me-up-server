extends layout

block content
    div(id="map-canvas")
        
    form(id="filter-control")
        div(class="container")
            div(class="row")
                div(class="col-md-2 vertically-centered")
                    label(for="max-fuel-level")="Maximum fuel level"
                div(class="col-md-9 vertically-centered")
                    input(class="max-fuel-level", type="range", min="0", max="100", value="25")
                div(class="col-md-1 vertically-centered")
                    output(class="max-fuel-level")="25%"